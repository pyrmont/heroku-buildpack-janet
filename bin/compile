#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

# jpm deps
echo "-----> Installing Dependencies"
# jpm deps 2>&1 | indent

# jpm build
echo "-----> Building Artifacts"

# jpm install
echo "-----> Installing Executable"
